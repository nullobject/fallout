#!/usr/bin/env ruby

$:.unshift File.join(File.expand_path(File.dirname(__FILE__)), '..', 'lib')

require 'rubygems'
require 'bundler/setup'

require 'fallout'

manager = Fallout::Manager.new

manager.add_source(Fallout::Source::Random.new)
manager.add_sink(Fallout::Sink::LEDMatrix.new)

trap("TERM") { manager.stop }
trap("INT")  { manager.stop }

manager.run
